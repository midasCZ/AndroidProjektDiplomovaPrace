<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="2"

        >

        <Button
            android:id="@+id/btn_Start"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Start"
            android:onClick="btn_Start_Clicked"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            />

        <TextView
            android:id="@+id/lbl_Cas"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Skóre:"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/lbl_Skore"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Čas:"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"/>

        <Button
            android:id="@+id/btn_About"
            android:layout_column="3"
            android:layout_row="0"
            android:text="O aplikaci"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:onClick="btn_About_Clicked"
            />
        <FrameLayout
            android:id="@+id/frm"
    android:layout_columnSpan="4"
    android:layout_row="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

            <Button
                android:id="@+id/btn_Dobra_Kapka"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="btn_Dobra_Kapka_Clicked"
                android:background="#00FFFF"/>
        </FrameLayout>
    </GridLayout>




</android.support.constraint.ConstraintLayout>